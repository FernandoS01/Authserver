datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      Int      @id @default(autoincrement())
  name    String   @default("unknown")
  surname String   @default("unknown")
  birth   DateTime @default(now())
  email   String   @unique
  passwordHash String
  country String?
  createdAt DateTime @default(now())
}

